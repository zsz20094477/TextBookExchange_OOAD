<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blueback"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="module2.bookwise.SearchActivity">

    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Your Books"
            android:textSize="40dp"
            android:textColor="@color/text"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Design and Analysis of Alforithms"
            android:textSize="20dp"
            android:id="@+id/textView3"
            android:textColor="@color/text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Database Management"
            android:textSize = "20dp"
            android:textColor="@color/text"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Object Oriented Analysis and Design"
            android:textSize="20dp"
            android:textColor="@color/text"
            android:id="@+id/textView5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="World War 2"
            android:textSize="20dp"
            android:textColor="@color/text"
            android:id="@+id/textView6" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a new book"
        android:src="@drawable/plus"

        android:id="@+id/button3"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/autoCompleteTextView"
        android:layout_marginBottom="35dp" />
    <!--android:background="@color/colorAccent"-->

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Search for books"
        android:textColorHint="#80FFFFFF"
        android:textColor="#FFF"
        android:id="@+id/autoCompleteTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:background="@drawable/search"
        android:layout_height="30dp"
        android:id="@+id/button2"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/autoCompleteTextView"
        android:layout_alignRight="@+id/autoCompleteTextView"
        />

</RelativeLayout>
